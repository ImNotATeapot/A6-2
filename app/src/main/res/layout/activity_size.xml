<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="32dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sizePromptTextView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sizeText" />

        <Spinner
            android:id="@+id/sizeSpinner"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/sizeSpinnerOptions" />
    </LinearLayout>

    <Button
        android:id="@+id/setSizeChangesButton"
        android:layout_width="@dimen/setButtonWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:text="@string/setChangesText" />
</LinearLayout>